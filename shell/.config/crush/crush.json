{
	"$schema": "https://charm.land/crush.json",
	"tools": {
		"ls": {}
	},
	"mcp": {
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": "$(echo $CONTEXT7_API_KEY)"
			}
		},
		"sequential-thinking": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
		},
		"memory": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-memory"]
		},
		"v0": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"mcp-remote",
				"https://mcp.v0.dev",
				"--header",
				"Authorization: Bearer ${V0_API_KEY}"
			]
		},
		"sentry": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "mcp-remote@latest", "https://mcp.sentry.dev/mcp"]
		},
		"linear": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "mcp-remote", "https://mcp.linear.app/mcp"]
		},
		"pagerduty": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"mcp-remote",
				"https://mcp.pagerduty.com/mcp",
				"--header",
				"Authorization: Token ${PAGERDUTY_TOKEN}"
			]
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
			"timeout": 30,
			"headers": {
				"Authorization": "$(echo Bearer $(gh auth token))"
			}
		},
		"playwright": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@playwright/mcp@latest"]
		}
	},
	"permissions": {
		"allowed_tools": [
			"view",
			"ls",
			"sourcegraph",
			"fetch",
			"grep",
			"edit",
			"mcp_context7_get-library-doc",
			"mcp_sequential-thinking_sequentialthinking",
			"multiedit",
			"mcp_github_pull_request_read",
			"mcp_linear_get_issue",
			"agentic_fetch",
			"mcp_context7_resolve-library-id",
			"mcp_playwright_browser_navigate"
		]
	},
	"lsp": {
		"rust_analyzer": {
			"command": "rust-analyzer",
			"filetypes": ["rust", "rs"]
		},
		"go": {
			"command": "gopls",
			"filetypes": ["go", "gomod", "gowork", "gotmpl"]
		},
		"typescript": {
			"command": "vtsls",
			"args": ["--stdio"],
			"filetypes": [
				"typescript",
				"typescriptreact",
				"javascript",
				"javascriptreact",
				"vue",
				"svelte"
			]
		},
		"kotlin": {
			"command": "kotlin-ls",
			"args": ["--stdio"],
			"filetypes": ["kt"]
		}
	},
	"options": {
		"tui": {
			"diff_mode": "split",
			"completions": {}
		},
		"disabled_tools": []
	}
}
